# OpenRange Trader - Environment Configuration
# Copy this file to .env and fill in your credentials
# IMPORTANT: Never commit .env to version control!

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=3000
NODE_ENV=development
REQUEST_TIMEOUT=10000

# Production only - comma-separated list of allowed origins
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================
# SECURITY - CRITICAL: Change these in production!
# ============================================

# JWT Secret for user authentication tokens
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=replace_with_long_random_string_for_production

# API key for proxy protection
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
PROXY_API_KEY=replace_with_secure_random_string

# Encryption key for storing sensitive user data (Saxo tokens)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex').slice(0,32))"
ENCRYPTION_KEY=replace_with_32_character_string

# ============================================
# DATABASE (Supabase PostgreSQL)
# ============================================
# Get connection string from Supabase Dashboard > Settings > Database > Connection string > URI
DATABASE_URL=postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres

# ============================================
# SAXO BANK API (OAuth 2.0)
# ============================================
# Get these from your Saxo Developer Portal app

SAXO_API_URL=https://gateway.saxobank.com/openapi
SAXO_APP_KEY=your_app_key_here
SAXO_APP_SECRET=your_app_secret_here
SAXO_AUTH_URL=https://live.logonvalidation.net/authorize
SAXO_TOKEN_URL=https://live.logonvalidation.net/token
SAXO_REDIRECT_URI=http://localhost:3000/auth/callback

# Legacy token-based auth (if not using OAuth)
SAXO_TOKEN=your_saxo_token_here
SAXO_CLIENT_KEY=your_client_key_here
SAXO_ACCOUNT_NUMBER=your_account_number_here

# ============================================
# EXTERNAL API KEYS
# ============================================

# Finnhub API - Get free key at https://finnhub.io/
FINNHUB_API_KEY=your_finnhub_api_key_here

# Finviz Elite - Premium subscription required
FINVIZ_NEWS_TOKEN=your_finviz_elite_token_here

# Perplexity API (AI Quant)
# Get key at https://www.perplexity.ai/settings/api and keep it secret
PPLX_API_KEY=your_perplexity_api_key_here
# Optional: override model (defaults to pplx-70b-online)
PPLX_MODEL=sonar-pro
