{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "providers/**/*.ts", "models/**/*.ts", "scoring/**/*.ts", "cli.ts", "tests/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
