{
  "name": "premarket-screener",
  "version": "1.0.0",
  "description": "Pre-market screener and watchlist generator CLI",
  "main": "dist/cli.js",
  "bin": {
    "pm-scan": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "ts-node cli.ts --input sample-data/sample-input.json --config config/default-config.yaml --output sample-output",
    "start:csv": "ts-node cli.ts --input sample-data/sample-input.csv --config config/default-config.yaml --output sample-output",
    "test": "jest"
  },
  "dependencies": {
    "csv-parse": "^5.5.6",
    "js-yaml": "^4.1.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.7.4",
    "@types/yargs": "^17.0.32",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
